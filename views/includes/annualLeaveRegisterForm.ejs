<div style="background-color: rgb(223, 239, 239);" class="row p-3">
  <div class="col-12 col-md-6 col-lg-6">
    <h3>Thông tin đăng ký</h3>
    <div>
      <p>Tổng số ngày nghỉ còn lại: <%= annualLeave %></p>
      <p>Lý do: <%= reason %> </p>
      <p>Danh sách đăng ký ngày nghỉ</p>
      <p style="color: red"><%= error ? error : '' %></p>
      <% if (dateList) { for (let date of dateList) { %> <ul>
        <li>
          Ngày: <%= date.date %> - thời gian: <%= date.hours %> giờ
        </li>
      </ul> <% } } else { %>
      <p>Chưa đăng ký danh sách</p>
      <% } %>
    </div>
  </div>

  <div class="col-12 col-md-6 col-lg-6">
    <form method="POST" action="/nghiphep">
      <div class="mb-3">
        <label class="form-label">Lý do nghỉ phép</label>
        <input type="text" class="form-control" id="floatingInput" name="annualLeaveReasons" placeholder="chi tiết">
      </div>
      <div class="mb-3">
        <label class="form-label">Ngày đăng ký nghỉ phép</label>
        <input class="form-control" type="date" name="annualLeave" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Số giờ đăng ký nghỉ</label>
        <input max="8" class="form-control" type="number" name="annualLeaveHours" required />
      </div>
      <div class="d-flex justify-content-center gap-3">
        <button class="btn centered" type="submit">Thêm thông tin</button>
      </form>
        <form action="/resetRegisterData" method="GET">
          <button class="btn centered">Reset form</button>
        </form>
      </div>
    
  </div>
</div>

<hr />
<div class="d-flex justify-content-center">
  <form action="/dangkyngaynghi" method="POST">
    <button <% if (!isRegister) { %> disabled <% } %> class="btn centered" type="submit">Đăng ký ngày nghỉ</button>
  </form>
</div>

<hr>
<div class="container">
<h4>Danh sách ngày nghỉ đã đăng ký</h4>
<% if (registeredList) { for (let detail of registeredList.details) { %>
<p>Lý do: <%= detail.reason %> </p>
<%  for (let date of detail.timeDetails) { %>
<ul>
  <li>
    Ngày: <%= date.date %> - thời gian: <%= date.hours %> giờ
  </li>
</ul> <%}}} else { %>
<p>Chưa đăng ký danh sách</p>
<% } %>
</div>